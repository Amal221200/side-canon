---
import { getCollection } from 'astro:content';
import IndexPageContainer from '@/components/IndexPageContainer.astro';
import { PageType } from '@/types';

const stories = (await getCollection('nmu')).filter((story) => story.data.published).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<IndexPageContainer
	stories={stories}
	title="NMU"
	description="Explore the stories of my own re-imagined Marvel Universe"
 	type={PageType.NMU}
/>
